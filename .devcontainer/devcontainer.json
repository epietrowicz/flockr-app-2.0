{
  "name": "Flockr Dev Container",
  "dockerComposeFile": "../flockr/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "remoteUser": "root",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
